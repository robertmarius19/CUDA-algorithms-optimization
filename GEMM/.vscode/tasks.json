{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenBLAS GEMM",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-IC:/msys64/mingw64/include",
                "-IC:/msys64/mingw64/include/openblas",
                "-LC:/msys64/mingw64/lib",
                "-lopenblas"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile with OpenBLAS (MINGW64)"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "g++ -O3 ${file} -o ${fileDirname}/${fileBasenameNoExtension}.exe -IC:/msys64/mingw64/include -IC:/msys64/mingw64/include/openblas -LC:/msys64/mingw64/lib -lopenblas && ${fileDirname}/${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and run with OpenBLAS"
        }
    ]
}